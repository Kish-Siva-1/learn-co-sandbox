<div class="container">
  <div class="col-md-8 col-md-offset-2">
  <h2><%= current_user.username.capitalize %>'s Portfolio </h2>
  
  <h3>Create a New Portfolio</h3>
  
  <form method="POST" action='/portfolio/new'><br>
  
    Portfolio Name: <input type="text" name='portfolio[name]'><br><br>
    Stock <% 1 %>: <input type="text" name='stock[name]'> Portfolio Weight: <input type="text" name='stock[weight]'> 
    <input type="submit" value ='Submit'>
    
  <br>
 
  <input type="text" name="portfolio[name]">
 
  <br>
 
  <label>Choose an existing stock:</label>
 
  <br>
 
  <%@stocks.each do |stock|%>
    <input type="checkbox" name="portfolio[stock_ids][]" id="<%=stock.id%>" value="<%=stock.id%>"><%=stock.name%></input>
  <%end%>
 
  <br>
 
    <label>and/or, create a new stock:</label>
    <br>
    <label>Stock Name:</label>
      <input  type="text" name="stock[name]"></input>
    <br><br>
  <input type="submit" value="Create Portfolio">  
  
  </form>
    
  </div>
</div>