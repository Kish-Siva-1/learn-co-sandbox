<div class="container">
  <div class="col-md-8 col-md-offset-2">
  <h2><%= current_user.username.capitalize %>'s Portfolio </h2>
  
  <h3>Add a New Stock</h3>
  
  <h5>Please fill out a portfolio weight for every stock.</h5>
  
  <form method="POST" action='/stock/<%=@id%>'><br>
  <input id="hidden" type="hidden" name="_method" value="patch">
  
  <%current_user.portfolios.find(@id).stocks.each do |x|%> 
    
    Stock Name: <input type="text" name='stock[][name]' value=<%=x.name%>>
    
    Portfolio Weight:  <input type="text" name='weight[][portfolio_weight]' value=<%=x.weights.first.portfolio_weight%>>
    
    <br>
    <br>

  <%end%>
  
  <input type="submit" value="Edit Stocks">  
  
  </form>
    
  </div>
</div>